---
export interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="tags">
  {tags.map((tag) => (
    <a href={`/tags/${tag}`} class="tag">{tag}</a>
  ))}
</div>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -0.5em;
  }
  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 0.9em;
    background-color: #F8FCFD;
    color: #00a3d9;
    text-decoration: none;
  }
  .tag:hover {
    background-color: #00a3d9;
    color: #ffffff;
  }
</style>